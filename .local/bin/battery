#!/bin/sh

while true
do
    capacity=$(cat /sys/class/power_supply/"BAT0"/capacity)
    status=$(cat /sys/class/power_supply/"BAT0"/status)
    [[ ( "$capacity" -gt "95"  &&  "$status" == "Charging" || "$status" == "Full")\
    || ( "$capacity" -lt "30"  &&  "$status" == "Discharging" ) ]] && \
    mpv ~/.cache/bell.oga > /dev/null

    sleep 5
done &
